.main-box-text1 {
    margin-left: 30rpx;
    line-height: 90rpx;
    font-weight: 700;
    font-size: 35rpx;
    letter-spacing: 3rpx;
}

.main-box-text2{
    margin-left: 30rpx;
    line-height: 60rpx;
    color: rgb(118, 119, 121);
    font-size: 30rpx;
    letter-spacing: 3rpx;
}

.remove {  
    width: 180rpx;  
    height: 100%;   
    position: absolute;  
    top: 0;  
    right: -180rpx;  
    display: flex;  
    align-items: center; 
    justify-content: center;
    font-size: 35rpx;
    letter-spacing: 10rpx;
    color: white; 
    background-color: red; 
}  

/* 没有数据时 */
.no-data {
    width: 100%;
    height: 400rpx;
    padding-top: 30%;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.no-data-img {
    width: 80%;
    height: 100%;
    margin: 0 auto;
}

.no-data-img image {
    width: 100%;
    height: 100%;
}

.no-data-text {
    text-align: center;
    margin-top: -20rpx;
    color: #adabab;
    font-size: 40rpx;
}