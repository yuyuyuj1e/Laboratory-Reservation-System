/* pages/my_order/my_order.wxss */

/* banner */
.order-banner {
    width: 100%;
    height: 213rpx;
    background-color: rgb(0, 174, 243);
}

/* 顶部文字 */
.order-top {
    width: 750rpx;
    height: 210rpx;
}


.order-top-title {
    font-size: 60rpx;
    font-weight: bolder;
    letter-spacing: 20rpx;
    color: #fff;
    text-align: center;
    line-height: 210rpx;
}

/* 导航区 */
.order-nav {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    background-color: #cecece65;
}

.order-nav-status {
    width: 50%;
    line-height: 80rpx;
    font-weight: 500;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.order-nav-status-cont {
    padding-left: 15rpx;
}

/* 列表 */
.order-list {
    width: 100%;
}

.order-item {
    width: 100%;
    height:350rpx; 
    position: relative; 
}

.order-item-box {
    width: 90%;
    height: 100%;
    margin: 0 auto;
    background-image: linear-gradient(to right, rgba(7, 53, 180, 0.103) , rgba(229, 226, 226, 0.253));
    margin-top: 50rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 20px rgb(0 0 0 / 20%);
}

.item-title {
    line-height: 80rpx;
    margin-left: 50rpx;
    letter-spacing: 4rpx;
    color: rgb(5, 67, 124);
    font-weight: 600;
}

.item-main {
    width: 98%;
    height: 200rpx;
    border-left: 10rpx solid rgb(46, 81, 146);
}

