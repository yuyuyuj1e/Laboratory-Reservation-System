/* pages/contact/contact.wxss */
page {
    background-image: linear-gradient(180deg,#079df3, #e4f2fa);
}


.page {
    margin-top: 100rpx;
    width: 100%;
    height: 700rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    width: 50%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    font-weight: 800;
    font-size: 60rpx;
    letter-spacing: 10rpx;
}

.text {
    width: 80%;
    height: 200rpx;
    margin-top: 50rpx;
    font-size: 40rpx;
    text-align: center;
}

.btn {
    width: 50%;
    height: 80rpx;
}

.btn button {
    width: 100%;
    height: 100%;
    font-size: 40rpx;
}