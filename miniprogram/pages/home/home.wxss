/* 活动公告 */
.news-bar {
    width: 95%;
    min-height: 300rpx;
    margin: 20rpx auto;
}

.news-bar-title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    letter-spacing: 5rpx;
    padding-left: 20rpx;
    font-weight: 700;
    border-left: 10rpx solid blue;
    background-color: bisque;
    margin-bottom: 20rpx;
    box-shadow: 0 0 20rpx rgb(0 0 0 / 20%);
}

/* 活动item */
.news-bar-box {
    width: 100%;
    height: 230rpx;
    border-bottom: 1rpx solid #e7e7e7;
}

.news-box-img {
    width: 300rpx;
    height: 230rpx;
    float: left;
}

.news-box-img image {
    width: 100%;
    height: 100%;
    
}

.news-box-text {
    width: 400rpx;
    height: 100%;
    float: left;
    padding-left: 10rpx;
}

.news-box-text-title {
    width: 100%;
    height: 190rpx;
    padding-top: 5rpx;
    line-height: 65rpx;
    font-weight: 700;
    font-size: 30rpx;
    letter-spacing: 3rpx;
}

.news-box-text-time {
    width: 100%;
    height: 35rpx;
    line-height: 25rpx;
    font-size: 24rpx;
    color: rgb(109, 108, 108);
    display: flex;
    align-items: center;
}

.bottom {
    width: 100%;
    height: 200rpx;
}