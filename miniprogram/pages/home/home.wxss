/* 轮播图 */
.banner {
    width: 100%;
    height: 350rpx;
}

.swiper-image {
    width: 100%;
    height: 100%;
}

/* 通知公告 */
.notice {
    width: 90%;
    height: 75rpx;
    margin: 20rpx auto;
    border-radius: 10rpx;
    border: 1px solid rgb(130, 132, 233);
    background-color: rgba(188, 229, 245, 0.4);
    box-shadow: 0 0 20rpx rgb(0 0 0 / 20%);
}

.notice-left {
    width: 30%;
    height: 100%;
    display: flex;
    float: left;
}

.notice-left image {
    height: 60rpx;
    width: 60rpx;
    padding-top: 7.5rpx;
    padding-left: 15rpx;
    float: left;
}

.notice-title {
    height: 100%;
    float: left;
    display: flex;
    align-items: center;
    margin-left: 5rpx;
    font-weight: 400;
    font-size: 30rpx;
    color: darkblue;
}

.notice-right {
    height: 100%;
    width: 70%;
    float: left;
}

.swiper-notice {
    width: 100%;
    height: 100%;
}

.swiper-notice-item {
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    letter-spacing: 3rpx;
    color: rgb(56, 98, 236);
    padding-left: 1%;
}

/* 导航 */
.navigation {
    width: 100%;
    height: 175rpx;
    display: flex;
}

.nav-banner-item {
    width: 25%;
    height: 100%;
    align-content: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nav-banner-img {
    width: 120rpx;
    height: 120rpx;
    margin: 5% 5%;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-banner-img image {
    width: 90%;
    height: 95%;
    
}

.nav-banner-text {
    height: 20%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 29rpx;
}

