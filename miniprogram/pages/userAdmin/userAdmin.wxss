/* pages/userAdmin/userAdmin.wxss */

/* banner */
.user-banner {
    width: 100%;
    height: 210rpx;
    background-color: rgb(0, 174, 243);
}

/* 顶部文字 */
.oruser-banner-der-top {
    width: 750rpx;
    height: 210rpx;
}


.user-banner-top-title {
    font-size: 60rpx;
    font-weight: bolder;
    letter-spacing: 20rpx;
    color: #fff;
    text-align: center;
    line-height: 210rpx;
}

/* 用户列表 */
.user-container {
    width: 100%;
}

.user-item {
    width: 90%;
    height: 500rpx;
    margin: 30rpx auto 40rpx;
    border-radius: 30rpx;
    background-color: rgb(255, 255, 255);
    box-shadow: 0 0 20rpx rgb(0 0 0 / 20%);
}

/* 顶部 */
.user-top {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #e7e7e7;
}

.top-title {
    margin-left: 30rpx;
    font-size: 35rpx;
    letter-spacing: 5rpx;
    font-weight: 600;
    color: rgb(100, 100, 100);
}

.top-cont {
    margin-right: 30rpx;
    font-size: 29rpx;
    font-weight: 550;
}

/* 中部 */
.user-middle-container {
    width: 100%;
    height: 160rpx;
    border-bottom: 1rpx solid #e7e7e7;
}

.middle-box {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 10rpx;
}

.middle-title {
    margin-left: 30rpx;
    font-size: 34rpx;
    letter-spacing: 5rpx;
    font-weight: 400;
    color: rgb(100, 100, 100);
}

.middle-cont {
    margin-right: 30rpx;
    font-size: 34rpx;
    letter-spacing: 2rpx;
}


/* 底部 */
.user-bottom {
    width: 100%;
    height: 230rpx;
}

.bottom-title {
    height: 50rpx;
    padding-top: 10rpx;
    margin-left: 30rpx;
    font-size: 35rpx;
    letter-spacing: 5rpx;
    font-weight: 600;
    color: rgb(100, 100, 100);
}

.bottom-box {
    width: 100%;
    height: 85rpx;
    display: flex;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bottom-box-title {
    margin-left: 30rpx;
    font-size: 33rpx;
    letter-spacing: 5rpx;
    font-weight: 400;
    color: rgb(100, 100, 100);
}

.bottom-box switch {
    padding-right: 50rpx;
    zoom: 85%;
}