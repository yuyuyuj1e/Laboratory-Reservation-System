.laboratory-list-li-img {
    width: 40%;
    height: 100%;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
}

.laboratory-list-li-img image{
    width: 90%;
    height: 90%;
}

.laboratory-list-li-box {
    width: 56%;
    height: 100%;
    float: left;
}

.box-top {
    width: 100%;
    height: 40%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #7a797934;
} 

.top-text1 {
    font-weight: 500;
    font-size: 45rpx;
}

.top-text2 {
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 35rpx;
}

.box-middle {
    width: 100%;
    height: 30%;
    font-size: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid #7a797934;
}

.box-middle text {
    padding-left: 30rpx;
    padding-right: 30rpx;
}


.box-bottom {
    width: 100%;
    height: 30%;
}

.box-bottom-left, .box-bottom-right {
    width: 50%;
    height: 100%;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
}