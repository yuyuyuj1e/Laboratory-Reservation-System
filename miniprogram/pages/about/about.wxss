/* pages/about/about.wxss */

/* 顶部 */
.about-top {
    width: 100%;
    height: 30vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #cac9c927;
}

.about-top-img {
    width: 180rpx;
    height: 180rpx;
}

.about-top-img image {
    width: 100%;
    height: 100%;
}

.about-top-version {
    margin-top: 20rpx;
    min-width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    letter-spacing: 1rpx;
}

/* 中部信息 */
.about-middle {
    width: 100%;
    height: 40vh;
    background-color: white;
}

.about-middle-list {
    width: 88%;
    height: 20%;
    padding: 0 6%;
    border-bottom: 1rpx solid #e7e7e7;
    display: flex;
    align-items: center;
}

.about-middle-list-title {
    width: 50%;
    color: #666;
}

.about-middle-list-cont {
    width: 50%;
    display: flex;
    flex-direction: row-reverse;
}

