/* pages/laboratoryInfo/laboratoryInfo.wxss */

/* 背景颜色 */
page {
    background-image: linear-gradient(150deg,#079df3, #e4f2fa);
}

/* 顶部图片区 */
.top-img {
    width: 100%;
    height: 30vh;
}

.top-img swiper {
    width: 100%;
    height: 100%;
}

.top-img swiper-item image {
    width: 100%;
    height: 100%;
}

/* 实验室信息 */

/* 实验室名称及地点 */
.laboratory {
    width: 100%;
    height: 35vh;
}

.laboratory-view {
    width: 95%;
    height: 90%;
    border-radius: 30rpx;
    background-color: white;
    box-shadow: 10rpx 10rpx 20rpx rgb(0 0 0 / 20%);
    margin: 5% 2.5%;
}

.laboratory-info {
    height: 40%;
}

.laboratory-info-name {
    width: 100%;
    height: 40%;
    font-size: 35rpx;
    color: #5e5e5e;
    display: flex;
    align-items: center;
    justify-content: center;
}

.laboratory-info-border {
    height: 1rpx;
    width: 50%;
    margin-left: 25%;
    background-color: #c8c8c8;
}

.laboratory-info-position {
    width: 100%;
    height: 60%;
    font-size: 35rpx;
    color: #5e5e5e;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

/* 分割线区 */
.laboratory-border {
    height: 1%;
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.laboratory-border-left, .laboratory-border-right {
    height: 1rpx;
    width: 35%;
    background-color: #c8c8c8;
}

/* 实验室简介 */
.laboratory-introduce {
    height: 59%;
}

.laboratory-introduce-title {
    width: 30%;
    height: 30%;
    font-size: 35rpx;
    display: flex;
    align-items: center;
    padding-left: 50rpx;
    color: #5e5e5e;
}

.laboratory-introduce-border {
    height: 1rpx;
    width: 40%;
    margin-left: 30rpx;
    background-color: #c8c8c8;
}

.laboratory-introduce-text {
    height: 69%;
    line-height: 70rpx;
    font-size: 35rpx;
    padding: 10rpx 35rpx;
    color: #5e5e5e;
}


