/* 底部图片区 */
.bottom-img {
    width: 100%;
    height: 35vh;
    display: flex;
    flex-direction: column;
}

.bottom-img-first, .bottom-img-second {
    width: 100%;
    height: 50%;
}

.bottom-img-first {
    display: flex;
    flex-direction: row-reverse;
}

.bottom-img-second {
    display: flex;
}

.bottom-img-first-image, .bottom-img-second-image {
    width: 35%;
    height: 100%;
}

.bottom-img-first-image {
    margin-right: 30rpx;
    margin-top: 50rpx
}

.bottom-img-second-image {
    margin-left: 30rpx;
    margin-top: -50rpx;
}

.bottom-img-first-image image, .bottom-img-second-image image {
    width: 100%;
    height: 100%;
}

.bottom-img-first-text,  .bottom-img-second-text{
    width: 50rpx;
    height: 240rpx;
    line-height: 60rpx;
    font-size: 60rpx;
    color: #232424;
}

.bottom-img-first-text {
    margin-right: 105rpx;
    margin-top: 50rpx;
}

.bottom-img-second-text {
    margin-left: 105rpx;
    margin-top: -50rpx;
}